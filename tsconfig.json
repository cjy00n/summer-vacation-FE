{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve", // 이전값 : "jsx": "react-jsx"
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* 아래 5줄 새로 추가 */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "src",
    "./dist/types/**/*.ts",
    "./next-env.d.ts"
  ], // 이전값 : "include": ["src"]
  // 제거 - "exclude": ["./node_modules"]
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ] // 새로 추가
  ,
  "exclude": [
    "node_modules"
  ]
}
